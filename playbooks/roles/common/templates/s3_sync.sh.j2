#!/bin/bash
RUNTIME=`date --rfc-3339=seconds`
HOST=`hostname`

# Sync grader logs to S3
echo "Running S3 sync at $RUNTIME"
echo

{% for sync_src in s3_sync_dirs %}
echo "Syncing {{ sync_src }} -> s3://{{ grader_s3_log_bucket }}/{{ grader_log_environment }}/$HOST{{ sync_src }}"
/usr/local/bin/aws s3 sync "{{ sync_src }}" "s3://{{ grader_s3_log_bucket }}/{{ grader_log_environment }}/$HOST{{ sync_src }}" --exclude "*.log"

{% endfor %}

echo
echo "S3 sync completed."
echo
